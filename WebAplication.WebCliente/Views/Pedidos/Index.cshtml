@model IEnumerable<WebAplication.WebCliente.Data.Entities.Pedidos>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            
            @foreach (var item in Model.GroupBy(y => y.NroPedido).Select(x => x.First()).Distinct())
            {
                <div class="panel-heading">
                    <h3 class="panel-title">Numero de pedido @Model.Select(x => item.NroPedido).FirstOrDefault()</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    Producto
                                </th>
                                <th>
                                    Precio
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var items in Model.Where(x =>x.NroPedido == item.NroPedido))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => items.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => items.Valor)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>




