@model IEnumerable<WebAplication.WebCliente.Data.Entities.Productos>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Productos a facturar</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                Producto
                            </th>
                            <th>
                                Precio
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Precio)
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td style="background-color: darkgray">
                                Total a facturar
                            </td>
                            <td style="background-color: darkgray">
                                @Model.Sum(x => x.Precio)
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <p>
                    <a class="btn btn-primary" href="javascript:Registrar()">Realizar a pago</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    function Registrar() {

        $.ajax({
            type: "POST",
            url: "/Facturar/Create",
            dataType: "json",
            success: function (res) {
                alert("Se ha generado un nuevo pedido");
            },
            error: function (res) {
                alert(res.statusText);
            }
        })
    }

</script>



